{block header}
Vytvoření nového kurzu
{/block}
{block content}
<div class="h-100 row align-items-center">
    <div class="col-md-4 col-sm-1" />
    <div class="col-md-4 col-sm-10 mlr-2 align-items-center">

    	{ifset $error_insert}
        <div class="alert alert-danger">
            <strong>Vytvoření kurzu bylo neúspěšné!</strong> 
            Kurz se zkratkou <strong>{$error_course}</strong> již existuje!
        </div>
        {/ifset}

        {ifset $success_insert}
        <div class="alert alert-success animated bounce">
                <strong>Kurz byl úspěšně vytvořen</strong> a bude spracován vedoucím.
        </div>
        {/ifset}
        
        <div id="divForm" class="d-block">
            <form n:name="createCourseForm">
                <div class="form-group">
                    <label>Zkratka kurzu</label><label class='required'> *</label> 
                    {input id_course}
                </div>
                <div class="form-group">
                    <label>Název kurzu</label><label class='required'> *</label>
                    {input name}
                </div>
                <div class="form-group">
                    <label>Popis</label><label class='required'> *</label>
                    {input description}
                </div>
                <div class="form-group">
                    <label>Typ</label><label class='required'> *</label>
                    {input type}
                </div>
                <div class="form-group">
                    <label>Cena</label><label class='required'> *</label>
                    {input price}
                </div>
                <div class="form-group">
                    <label>Štítky</label> {input tags}
                </div>
                <div class="form-group text-center">
                    {input create}
                </div>
            </form>
        </div>
        
    </div>
    <div class="col-md-4 col-sm-1" />
</div>
{ifset $success_insert}
<script>
$("#divForm").removeClass('d-block');
$("#divForm").addClass('d-none');
</script>
{/ifset}
{/block}

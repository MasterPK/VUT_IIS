{block header}
Info kurzu
{/block}
{block content}
<div class="row">
    <div class="col-auto mr-auto"></div>
    <div class="col-auto">
        <button class="btn btn-dark">
            Soubory
        </button>
    </div>
</div>
<br>

    <div class="row">
        <div class="col-sm-12">
            {ifset $courses}
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th scope="col">#</th>
                        <th scope="col">Datum</th>
                        <th scope="col">Trvání v hod</th>
                        <th scope="col">Popis</th>
                        <th scope="col">Body</th>
                    </tr>
                </thead>
                <tbody>
                    {var $i = 0}
                    {foreach $courses as $row}
                    <tr class="text-center">
                        <th>{$i = $i+1}</th>
                        <td>{$row->task_date}</td>
                        <td>{$row->task_duration}</td>
                        <td>{$row->task_name}</td>
                        <td>{$row->task_points}</td>
                    </tr>
                    {/foreach}
                </tbody>
                {ifset $body}
                 <tfoot class="thead-dark">
                    <tr>
                        <th class="text-left" colspan="4">Body celkom</th>
                        <th class="text-center">{$body}</th>
                    </tr>
                </tfoot>
                {/ifset}
            </table>
            {else}
            <h3>Žádné termíny nejsou k dispozici!</h3>
            {/ifset}
        </div>
    </div>
{/block}

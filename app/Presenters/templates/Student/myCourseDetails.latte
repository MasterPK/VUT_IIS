{block header}
Info kurzu
{/block}
{block content}
    <div class="row">
        <div class="col-sm-12">
            {ifset $courses}
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr align="center">
                        <th scope="col">#</th>
                        <th scope="col">Datum</th>
                        <th scope="col">Popis</th>
                        <th scope="col">Body</th>
                    </tr>
                </thead>
                <tbody>
                    
                    {foreach $courses as $row}
                    <tr align="center">
                        <th>0</th>
                        <td>{$row->task_date->date}</td>
                        <td>{$row->task_name}</td>
                        <td>{$row->task_points}</td>
                    </tr>
                    {/foreach}
                </tbody>
            </table>
            {else}
            <h3>Žádné kurzy nejsou k dispozici!</h3>
            {/ifset}
        </div>
    </div>
{/block}

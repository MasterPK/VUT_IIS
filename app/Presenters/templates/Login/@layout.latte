<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Přihlášení</title>

    <link href="{$basePath}/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
    <link href="{$basePath}/css/mystyle.css" rel="stylesheet" id="my-style" />
    <script src="{$basePath}/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="">
    <div>
        <h1>Login</h1>
    </div>

    {ifset message} 
      {include message} 
    {/ifset} 

    {ifset $error_login}
    <div class="alert alert-danger">
        <strong>Příhlášení bylo neúspěšné!</strong> Zadané údaje nejsou správné!
    </div>
    {/ifset}

    <form n:name="loginForm">
        <div class="form-group">
          <label>Email address</label> 
          {input email}
        </div>
        <div class="form-group">
          <label>Password</label> 
          {input password}
        </div>
        <div class="form-group text-center ">
            {input login}
        </div>
    </form>
  </div>
</body>

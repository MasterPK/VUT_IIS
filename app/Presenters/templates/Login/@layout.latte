<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Přihlášení</title>

    <link href="{$basePath}/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
    <link href="{$basePath}/css/mystyle.css" rel="stylesheet" id="mystyle" />
    <script src="{$basePath}/js/bootstrap.min.js"></script>
</head>

<style>
    html,
    body {
        height: 100%;
    }
</style>

<body>
    <div class="h-100 row align-items-center">
        <div class="col-md-4 col-sm-1" />
        <div class="col-md-4 col-sm-10 mlr-2 align-items-center">
            <div class = "text-center">
                <h1>Login</h1>
            </div>

            {ifset message} {include message} {/ifset} {ifset $error_login}
            <div class="alert alert-danger">
                <strong>Příhlášení bylo neúspěšné!</strong> Zadané údaje nejsou správné!
            </div>
            {/ifset}

            <form n:name="loginForm">
                <div class="form-group">
                    <label>Email address</label> {input email}
                </div>
                <div class="form-group">
                    <label>Password</label> {input password}
                </div>
                <div class="form-group text-center ">
                    {input login}
                </div>
            </form>
        </div>
        <div class="col-md-4 col-sm-1" />
    </div>
</body>